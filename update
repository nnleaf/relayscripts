#!/bin/bash
#     ////     //  ////     //
#    // //    //  // //    //
#   //  //   //  //  //   //
#  //   //  //  //   //  //
# //    // //  //    // //
#//     ////  //     ////
#
# 20181117 - First script for updating Relay VM
# 20200319 - Checks logs for maintenance
# 20200319 - Added testing disk access speed
#            https://www.debian.org/doc/manuals/debian-reference/ch09.en.html
# 20200409 - Added WireGuard check
echo "------------------------------------------------------------------------"
echo "Updating Debian..."
echo "------------------------------------------------------------------------"
sudo apt-get update
echo "------------------------------------------------------------------------"
echo "Upgrading Debian..."
echo "------------------------------------------------------------------------"
sudo apt-get upgrade
echo "------------------------------------------------------------------------"
echo "Running autoclean..."
echo "------------------------------------------------------------------------"
sudo apt-get autoclean
echo "------------------------------------------------------------------------"
echo "Updating mlocate..."
echo "------------------------------------------------------------------------"
sudo updatedb
echo "------------------------------------------------------------------------"
echo "Checking WireGuard..."
echo "------------------------------------------------------------------------"
sudo wg
echo "------------------------------------------------------------------------"
echo "Remember to check logs!"
echo "------------------------------------------------------------------------"
read -p "Check logs? (y/n)"
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
  echo "------------------------------------------------------------------------"
  echo "Checking Unattended Updates log..."
  echo "------------------------------------------------------------------------"
  sudo tail -n 5 /var/log/dpkg.log
  echo "------------------------------------------------------------------------"
  echo "Checking if fail2ban is running..."
  echo "------------------------------------------------------------------------"
  sudo fail2ban-client status
  echo "------------------------------------------------------------------------"
  echo "Checking ufw status..."
  echo "------------------------------------------------------------------------"
  sudo ufw status
  echo "------------------------------------------------------------------------"
  echo "Testing disk access speed..."
  echo "------------------------------------------------------------------------"
  sudo hdparm -tT /dev/sda1
fi
